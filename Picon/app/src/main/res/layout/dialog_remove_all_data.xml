<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="settingRepo"
            type="com.yapp.picon.presentation.nav.repository.SettingRepository" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog">

        <TextView
            android:id="@+id/dialog_remove_all_data_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="14dp"
            android:text="@string/dialog_remove_all_data_title"
            android:textColor="@color/very_light_pink"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dialog_remove_all_data_description_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            android:text="@string/dialog_remove_all_data_description"
            android:textColor="@color/brown_grey"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_remove_all_data_title_tv" />

        <Button
            android:id="@+id/dialog_remove_all_data_remove_button"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="74dp"
            android:layout_height="60dp"
            android:layout_marginTop="7dp"
            android:layout_marginEnd="4dp"
            android:onClick="@{settingRepo::clickDialogRemove}"
            android:text="@string/remove"
            android:textColor="@color/coral"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_remove_all_data_description_tv" />

        <Button
            android:id="@+id/dialog_remove_all_data_cancel_button"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="74dp"
            android:layout_height="60dp"
            android:onClick="@{settingRepo::clickDialogDismiss}"
            android:text="@string/cancel"
            android:textColor="@color/very_light_pink"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="@+id/dialog_remove_all_data_remove_button"
            app:layout_constraintEnd_toStartOf="@+id/dialog_remove_all_data_remove_button"
            app:layout_constraintTop_toTopOf="@+id/dialog_remove_all_data_remove_button" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>