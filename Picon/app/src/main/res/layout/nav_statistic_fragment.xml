<?xml version="1.0" encoding="utf-8"?>
<layout>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/dark_grey">

        <include
            layout="@layout/nav_statistic_app_bar" />

        <FrameLayout
            android:id="@+id/nav_statistic_frame"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />

        <LinearLayout
            android:id="@+id/nav_statistic_month_linear_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="68dp"
            android:background="@drawable/bg_dialog"
            android:orientation="vertical"
            android:paddingTop="8dp"
            android:paddingBottom="8dp">

            <!--코드 상에서 동적으로 text view 추가해야 할 것 같음-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_statistic_month_title_9"
                android:textSize="16sp"
                android:textColor="@color/cornflower"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="58dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_statistic_month_title_8"
                android:textSize="16sp"
                android:textColor="@color/very_light_pink_two"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="58dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_statistic_month_title_7"
                android:textSize="16sp"
                android:textColor="@color/very_light_pink_two"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="58dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nav_statistic_month_title_6"
                android:textSize="16sp"
                android:textColor="@color/very_light_pink_two"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="58dp"
                android:layout_marginTop="14dp"
                android:layout_marginBottom="14dp"/>

        </LinearLayout>

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</layout>