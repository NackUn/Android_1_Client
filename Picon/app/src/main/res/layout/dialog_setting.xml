<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="274dp"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dialog">

        <TextView
            android:id="@+id/dialog_setting_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="14dp"
            android:textSize="14sp"
            android:textColor="@color/very_light_pink"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dialog_setting_content"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="20dp"
            android:textColor="@color/brown_grey"
            android:textSize="13sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_setting_title" />

        <Button
            android:id="@+id/dialog_setting_right_button"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:layout_marginEnd="17dp"
            android:minWidth="0dp"
            android:paddingLeft="11dp"
            android:paddingTop="8dp"
            android:paddingRight="11dp"
            android:paddingBottom="20dp"
            android:text="@string/remove"
            android:textColor="@color/coral"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_setting_content" />

        <Button
            android:id="@+id/dialog_setting_left_button"
            style="@style/Widget.MaterialComponents.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:minWidth="0dp"
            android:paddingLeft="11dp"
            android:paddingTop="8dp"
            android:paddingRight="11dp"
            android:paddingBottom="20dp"
            android:text="@string/cancellation"
            android:textColor="@color/very_light_pink"
            android:textSize="14sp"
            app:layout_constraintBottom_toBottomOf="@+id/dialog_setting_right_button"
            app:layout_constraintEnd_toStartOf="@+id/dialog_setting_right_button"
            app:layout_constraintTop_toTopOf="@+id/dialog_setting_right_button" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>