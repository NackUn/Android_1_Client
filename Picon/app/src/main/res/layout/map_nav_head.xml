<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="147dp"
    android:background="@color/dark_grey"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_weight="1">

            <ImageView
                android:id="@+id/map_nav_head_iv_circle_one"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginTop="43dp"
                android:background="@drawable/map_menu_color_circle"
                android:backgroundTint="@color/soft_blue"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:text="새벽 3시"
                android:textColor="#fefeff"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/map_nav_head_iv_circle_one"
                app:layout_constraintStart_toEndOf="@id/map_nav_head_iv_circle_one"
                app:layout_constraintTop_toTopOf="@id/map_nav_head_iv_circle_one" />

            <ImageView
                android:id="@+id/map_nav_head_iv_circle_three"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginTop="23dp"
                android:background="@drawable/map_menu_color_circle"
                android:backgroundTint="@color/cornflower"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/map_nav_head_iv_circle_one" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:text="구름없는 하늘"
                android:textColor="#fefeff"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/map_nav_head_iv_circle_three"
                app:layout_constraintStart_toEndOf="@id/map_nav_head_iv_circle_three"
                app:layout_constraintTop_toTopOf="@id/map_nav_head_iv_circle_three" />

            <ImageView
                android:id="@+id/map_nav_head_iv_circle_five"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginTop="22dp"
                android:background="@drawable/map_menu_color_circle"
                android:backgroundTint="@color/bluegrey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/map_nav_head_iv_circle_three" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:text="아침 이슬"
                android:textColor="#fefeff"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/map_nav_head_iv_circle_five"
                app:layout_constraintStart_toEndOf="@id/map_nav_head_iv_circle_five"
                app:layout_constraintTop_toTopOf="@id/map_nav_head_iv_circle_five" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/map_nav_head_iv_circle_two"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginTop="43dp"
                android:background="@drawable/map_menu_color_circle"
                android:backgroundTint="@color/very_light_brown"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:text="창문 너머 노을"
                android:textColor="#fefeff"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/map_nav_head_iv_circle_two"
                app:layout_constraintStart_toEndOf="@id/map_nav_head_iv_circle_two"
                app:layout_constraintTop_toTopOf="@id/map_nav_head_iv_circle_two" />

            <ImageView
                android:id="@+id/map_nav_head_iv_circle_four"
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginTop="23dp"
                android:background="@drawable/map_menu_color_circle"
                android:backgroundTint="@color/warm_grey"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/map_nav_head_iv_circle_two" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:text="잔잔한 밤"
                android:textColor="#fefeff"
                android:textSize="12sp"
                app:layout_constraintBottom_toBottomOf="@id/map_nav_head_iv_circle_four"
                app:layout_constraintStart_toEndOf="@id/map_nav_head_iv_circle_four"
                app:layout_constraintTop_toTopOf="@id/map_nav_head_iv_circle_four" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginEnd="20dp"
        android:background="@color/greyish_brown" />

</LinearLayout>